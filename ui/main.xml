				</WINDOW>

				<!--
					<WINDOW layout="290,0,30,40" onClick="function.toggleToolbar">
					<STYLEBUTTON layout="0,0,20,40" shape="roundRect(2,4,4,2)" borderStyle="solid:1|#334477" defaultImg="#00000000" padding="0,0,0,0" fontSize="20" overlay1="gradation:tb|#d0bbbbff|#e77777aa|#ff333366" overlay2="color:#ffffff|shape=rightTriangle" padding2="5,15,5,15" onClick="function.toggleToolbar"/>
					</WINDOW>
				-->
			</WINDOW>

			<!-- Sidemenu 접기 펼치기 왼쪽 하단 버튼 -->
