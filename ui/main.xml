					<STYLEBUTTON themeId="thLeftButton" text="마이페이지" onClick="function.navigation('http://mulawear.com/m/mypage.html')"/>
					<STYLEBUTTON themeId="thLeftButton" text="로그인" onClick="function.navigation('http://mulawear.com/m/login.html')"/>
					<STYLEBUTTON themeId="thLeftButton" text="갤러리" onClick="function.gallery"/>
					<STYLEBUTTON themeId="thLeftButton" text="블로그 검색" onClick="function.navigation('http://m.search.naver.com/search.naver?where=m_blog&amp;sm=mtb_jum&amp;query=mulawear')"/>
					<STYLEBUTTON themeId="thLeftButton" text="종료" onClick="application.terminate"/>

					<LABEL themeId="smallTitle" text="Develover menus"/>

					<STYLEBUTTON themeId="thLeftButton" text="주문정보 자동입력" onClick="function.fillOrderInfo"/>
					<STYLEBUTTON themeId="thLeftButton" text="html 소스 보기" onClick="function.viewSource"/>
					<STYLEBUTTON themeId="thLeftButton" text="웹브라우저로 보기" onClick="function.viewWebBrowser"/>
					<STYLEBUTTON themeId="thLeftButton" text="실시간 상담" onClick="function.chat"/>
					<STYLEBUTTON themeId="thLeftButton" text="test" onClick="function.test"/>

				</WINDOW>
			</WINDOW>
			<WINDOW id="id_leftMenuOverlay1" layout="0,-50,61,560" visible="invisible"/>
			<WINDOW id="id_leftMenuOverlay2" layout="60,-50,61,560" visible="invisible"/>
			<WINDOW id="id_rightArea" layout="0,0,320,460" defaultImg="#E5E5E5" onClick="'none'">
