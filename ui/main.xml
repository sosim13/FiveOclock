					<WINDOW id="gripper" layout="0,200,20,80" visible="invisible">
					<BUTTON layout="0,0,20,20" defaultImg="#80aaffaa" text="▲" padding="0,0,0,0"/>
					<BUTTON layout="0,20,20,40" defaultImg="#80aaaaff" text="||" padding="0,0,0,0" onClick="function.slide"/>
					<BUTTON layout="0,60,20,20" defaultImg="#80aaffaa" text="▼" padding="0,0,0,0"/>
					</WINDOW>
				-->
			</WINDOW>
			<CONTAINER id="galleryPopup" layout="0,30,320,390" visible="invisible"/>
			<WINDOW layout="0,0,320,30" defaultImg="#a0ffffff">
				<IMAGE layout="120,5,80,20" defaultImg="logo.png"/>
				<STYLEBUTTON layout="5,5,50,20" themeId="titleBarBtn" text="뒤로" onClick="function.back"/>
				<STYLEBUTTON layout="265,5,50,20" themeId="titleBarBtn" text="로그인" onClick="function.navigation('http://mulawear.com/m/login.html')"/>
			</WINDOW>
			<WINDOW layout="0,30,320,1px" defaultImg="#30a0a0a0"/>

			<WINDOW id="toolbar" layout="0,420,320,40">
				<WINDOW layout="0,0,320,60" align="linear:hFill">
					<STYLEBUTTON themeId="toolBtn" overlay2="color:#ffffff|shape=house" padding2="20,5,20,15" overlay3="color:#b0b0b0|shape=square" padding3="25,15,25,20" onClick="function.navigation('http://mulawear.com/m/main.html')">
						<LABEL themeId="toolText" text="홈"/>
					</STYLEBUTTON>
					<STYLEBUTTON themeId="toolBtn" text="■■" onClick="function.gallery">
						<LABEL themeId="toolText" text="갤러리"/>
					</STYLEBUTTON>
					<STYLEBUTTON themeId="toolBtn" text="▣" onClick="function.navigation('http://mulawear.com/m/basket.html')">
						<LABEL themeId="toolText" text="장바구니"/>
					</STYLEBUTTON>
					<STYLEBUTTON themeId="toolBtn" text="★" onClick="function.navigation('http://mulawear.com/m/mypage.html')">
						<LABEL themeId="toolText" text="마이페이지"/>
					</STYLEBUTTON>
					<STYLEBUTTON themeId="toolBtn" text="..." onClick="function.slide">
						<LABEL themeId="toolText" text="기타 메뉴"/>
